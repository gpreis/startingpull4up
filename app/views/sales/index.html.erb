

<h1> eWarehouse - Listing Sales </h1>
<% total = 0.0%>
<% sum = 0.0%>

<div id="top">

  <ul>
    <li>Navigate:</li>
    <li><%= link_to 'New sale', new_sale_path %></li>
  </ul>

  <h3> Listing Sales </h3>

  <table>
  	<thead>
    	<tr>
        	<th>Id Sale</th>
        	<th>Item</th>
        	<th>Value</th>
        	<th>Quantity</th>
        	<th>Customer</th>
        	<th>Salesperson</th>
        	<th>Final Sale Value</th>
      </tr>
    </thead>

    <tbody>
    	<% @sales.each do |sale| %>
      
        <tr onclick="location.href='<%= sale_path(sale.id) %>'">
          		<td id="td-blue"><%= sale.id %></td>
          		<td id="td-blue"><%= sale.item %></td>
          		<td id="td-blue"><%= sale.value %></td>
          		<td id="td-blue"><%= sale.quantity %></td>
          		<td id="td-blue"><%= sale.customer %></td>
          		<td id="td-blue"><%= sale.salesperson %></td>
          		<td id="td-blue">
          			<%= sum = (sale.quantity * sale.value) %>
          			<% total = total + sum %>
          		</td>
      		</tr>

      	<% end %>
      </tbody>

  </table>

  <p>
    <br/>
  	<strong>Total:</strong>
  	<%= total %>
  	<%=" R$"%>
  </p>

  <!--
  <p>
  	<strong>Ugly Menu:</strong>
  	<%= link_to 'New sale', new_sale_path %>
  </p>
  -->

</div>
