<%#= form_for :sale, role: 'form', url: sales_path do |f| %>
<%#= form_for :sale, role: 'form', url: sale_path(@sale), method: :patch do |f| %>
<%= form_for @sale do |f| %>

      <%if @sale.errors.any? %>
          <div class="alert alert-danger">
            <a class="close" data-dismiss="alert">&times;</a>
            <strong>Os seguinter erros impediram a venda de ser salva:</strong> 
            <ul>
              <% @sale.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <label for="customer">Cliente</label><br>
        <%= f.text_field :customer, class: 'form-control', id: 'customer', placeholder: 'Nome do Cliente' %>
      </div>
     
      <div class="form-group">
        <label for="item">Item</label><br>
        <%= f.text_field :item, class: 'form-control', id: 'item', placeholder: 'Descrição do Item' %>
      </div>

      <div class="form-group">
        <label for="value">Valor</label><br>
        <%= f.text_field :value, class: 'form-control', id: 'value', placeholder: 'Valor Unitário do Item' %>
      </div>

      <div class="form-group">
        <label for="quantity">Quantidade</label><br>
        <%= f.text_field :quantity, class: 'form-control', id: 'quantity', placeholder: 'Quantidade Unitária do Item' %>
      </div>

      <div class="form-group">
        <label for="address">Endereço</label><br>
        <%= f.text_field :address, class: 'form-control', id: 'address', placeholder: 'Endereço Completo' %>
      </div>
     
      <div class="form-group">
        <label for="salesperson">Vendedor</label><br>
        <%= f.text_field :salesperson, class: 'form-control', id: 'salesperson', placeholder: 'Nome do Vendedor' %>
      </div>
      
      <%= f.submit "Salvar!", class: 'btn btn-success'%><br/><br/>

    <% end %>