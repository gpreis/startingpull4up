<h1> eWarehouse - New Sale </h1>

<ul>
  <li>Navigate:</li>
  <li><%= link_to 'Home', sales_path %></li>
</ul>

<%= form_for :sale, url: sales_path do |f| %>

  <p>
    <%= f.label :customer %><br>
    <%= f.text_field :customer %>
  </p>
 
  <p>
    <%= f.label :item %><br>
    <%= f.text_field :item %>
  </p>

  <p>
    <%= f.label :value %><br>
    <%= f.text_field :value %>
  </p>

  <p>
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>
 
  <p>
    <%= f.label :salesperson %><br>
    <%= f.text_field :salesperson %>
  </p>

  <p>
    <%= f.submit :"Sell"%>
  </p>

<% end %>